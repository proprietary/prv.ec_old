    deps = [
        # "@se_haxx_curl//:curl",
        # "@org_libuv_libuv//:libuv",
    ],
)

cc_test(
    name = "curlpool_test",
    srcs = [
        "curlpool.test.cc",
    ],
    copts = [
        "-std=c++20",
        "-Werror",
        "-Wall",
        "-pedantic",
        "-ggdb",
        "-g3",
        "-O1",
    ],
